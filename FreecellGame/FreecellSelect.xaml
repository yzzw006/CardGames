<UserControl x:Class="CardGames.FreecellGame.FreecellSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="#1F0068" Height="140" Width="220">
    <Grid Margin="10,10">
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0" Orientation="Vertical" >
            <Label Content="Select Level [ 1-1000000 ]" Height="28" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" FontFamily="Arial" FontSize="16"/>
            <TextBox Height="23" Margin="0,5,0,0" Name="Text_Index" VerticalAlignment="Top"/>
            <Button Content="OK" Height="23"  Name="Btn_Confirm" Click="Btn_Confirm_Click" 
                        Background="#5F37BE" Margin="0,5,0,0"
                        Style="{StaticResource FlatButton}"/>
            <Button Content="Cancel" Height="23" Margin="0,5,0,0" Name="Btn_Cancel"
                        Click="Btn_Cancel_Click" Background="#5F37BE"
                        Style="{StaticResource FlatButton}"/>
        </StackPanel>


    </Grid>
</UserControl>
